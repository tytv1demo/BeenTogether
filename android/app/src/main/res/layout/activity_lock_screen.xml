<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.tytv.beentogether.features.lockscreen.LockScreenViewModel" />
    </data>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:flexDirection="column"
        tools:context=".features.lockscreen.LockScreenActivity">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/lock_screen_checkbox_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="50dp"
            app:alignItems="center"
            app:justifyContent="space_between"
            app:layout_flexBasisPercent="20%">

            <RadioButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:checked="@{viewModel.passwordNumbers.size() > 0}" />

            <RadioButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:checked="@{viewModel.passwordNumbers.size() > 1}" />

            <RadioButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:checked="@{viewModel.passwordNumbers.size() > 2}" />

            <RadioButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:checked="@{viewModel.passwordNumbers.size() > 3}" />

            <RadioButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:checked="@{viewModel.passwordNumbers.size() > 4}" />

            <RadioButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:checked="@{viewModel.passwordNumbers.size() > 5}" />
        </com.google.android.flexbox.FlexboxLayout>

        <fragment
            android:id="@+id/look_screen_fragment_number_pad"
            android:name="com.tytv.beentogether.fragments.pad.NumberPadFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_flexBasisPercent="80%" />

    </com.google.android.flexbox.FlexboxLayout>
</layout>
