{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "lib": [
        "es6"
      ],
      "allowJs": true,
      "jsx": "react-native",
      "noEmit": true,
      "incremental": true,
      "isolatedModules": true,
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@features": [
          "src/Features"
        ],
        "@components": [
          "src/Components"
        ],
        "@bridges": [
          "src/Bridges"
        ],
        "@dataManager": [
          "src/DataManager"
        ]
      },
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }